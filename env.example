# Smart Home Microservices Environment Variables
# Copy this file to .env and fill in your values

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database URLs (for future PostgreSQL migration)
# AUTH_DATABASE_URL=postgresql://user:password@localhost:5432/smart_home_auth
# USER_DATABASE_URL=postgresql://user:password@localhost:5432/smart_home_users
# TELEMETRY_DATABASE_URL=postgresql://user:password@localhost:5432/smart_home_telemetry
# AI_DATABASE_URL=postgresql://user:password@localhost:5432/smart_home_ai

# Service Ports
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
TELEMETRY_SERVICE_PORT=8003
AI_SERVICE_PORT=8004
API_GATEWAY_PORT=8000
FRONTEND_PORT=5173

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=30
JWT_REMEMBER_ME_DAYS=30

# Rate Limiting (for future implementation)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# External Services (for future implementation)
# REDIS_URL=redis://localhost:6379
# EMAIL_SERVICE_URL=smtp://localhost:587
# SMS_SERVICE_URL=https://api.twilio.com
